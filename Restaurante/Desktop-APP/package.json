{
  "name": "gastro-pos",
  "version": "1.1.2",
  "description": "Un software multidispositivos para restaurantes",
  "main": "./out/main/index.js",
  "author": "https://github.com/LMenesesTroche",
  "homepage": "https://gastro-pos.netlify.app/",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win --publish always",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "build": {
    "appId": "com.quality.miapp",
    "productName": "GastroPos",
    "directories": {
      "output": "release"
    },
    "files": [
      "out",
      "dist",
      "resources",
      "package.json",
      "backend/"
    ],
    "extraFiles": [
      {
        "from": "Restaurante-Back",
        "to": "Restaurante-Back"
      }
    ],
    "extraResources": [
      {
        "from": "../Restaurante-Back/dist/src",
        "to": "Restaurante-Back"
      },
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": false,
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "Quality-Soft-Bill",
      "repo": "system-gastro-pos"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@fontsource/lato": "^5.2.6",
    "@fontsource/montserrat": "^5.2.6",
    "@fontsource/open-sans": "^5.2.6",
    "@fontsource/raleway": "^5.2.6",
    "axios": "^1.11.0",
    "electron-log": "^5.4.2",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "file-saver": "^2.0.5",
    "js-cookie": "^3.0.5",
    "jspdf": "^3.0.2",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.525.0",
    "net": "^1.0.2",
    "node-fetch": "^3.3.2",
    "react-datepicker": "^8.4.0",
    "react-router-dom": "^7.6.2",
    "react-to-print": "^3.1.1",
    "react-tooltip": "^5.29.1",
    "serialport": "^13.0.0",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.5",
    "uuid": "^11.1.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "electron": "^35.7.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  }
}
